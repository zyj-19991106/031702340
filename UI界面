class popular_interface():
    def __init__(self, master):
        self.root = master
        self.root.title("福州最受欢迎商圈")
        self.root.geometry("1080x810")
        Button(self.root, text="返回", font=("华文行楷", 30), command=self.click1,relief="flat", bg="#556fb5").place(x=922, y=27, width=133,height=60)
        Label(self.root, text="", font=("华文行楷", 15), bg="#556fb5").place(x=39, y=131, width=537, height=190)
        self.root.mainloop()
    def click1(self):
        self.root.destroy()
        root = Tk()
        # photo = PhotoImage(file="C:\\Users\\ASUS\\Desktop\\D.gif")
        # Label(root, image=photo).place(x=0, y=0, width=1080, height=608)  # 把图片整合到标签类中
        menu_interface(root)
        root.mainloop()
