from tkinter import *
from tkinter import ttk
import requests
import json
class menu_interface():
    def __init__(self, master):
        self.root = master
        self.root.title("菜单界面")
        self.root.geometry("400x607")
        Button(self.root, text="福州最受欢迎商圈", font=("华文行楷", 20),command=self.click1 ,relief="flat",  bg="#ffffff").place(x=46,y=60, width=239,height=61)
        Button(self.root, text="美食餐厅排行榜", font=("华文行楷", 20),command=self.click2 , relief="flat",bg="#ffffff").place(x=46,y=184,width=239, height=61)
        Button(self.root, text="最佳美食聚集地", font=("华文行楷", 20), command=self.click3 ,relief="flat",  bg="#ffffff").place(x=46, y=303, width=239, height=61)
        Button(self.root, text="服饰类商圈", font=("华文行楷", 20), command=self.click4 ,relief="flat",  bg="#ffffff").place(x=46, y=422, width=239, height=61)
    def click1(self):
        self.root.destroy()
        root = Tk()
        photo = PhotoImage(file="C:\\Users\\Administrator\\Desktop\\fdughfh\\5.gif")
        Label(root, image=photo).place(x=0, y=0, width=1080, height=810)  # 把图片整合到标签类中
        popular_interface(root)
    def click2(self):
        self.root.destroy()
        root = Tk()
        photo = PhotoImage(file="C:\\Users\\Administrator\\Desktop\\fdughfh\\2.gif")
        Label(root, image=photo).place(x=0, y=0, width=755, height=960)  # 把图片整合到标签类中
        food_interface(root)
    def click3(self):
        self.root.destroy()
        root = Tk()
        photo = PhotoImage(file="C:\\Users\\Administrator\\Desktop\\fdughfh\\4.gif")
        Label(root, image=photo).place(x=0, y=0, width=934, height=960)  # 把图片整合到标签类中
        foodflock_inerface(root)
    def click4(self):
        self.root.destroy()
        root = Tk()
        photo = PhotoImage(file="C:\\Users\\Administrator\\Desktop\\fdughfh\\3.gif")
